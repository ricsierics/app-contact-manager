<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ContactManager.Views.LoaderPage">
    <ContentPage.Content>
        <StackLayout>

            <Image Source="{Binding ImageCallMeMaybe}" />
            
            <Label Text="{Binding BodyText}"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <Button Text="Proceed" IsVisible="{Binding IsErrorEncountered}" Command="{Binding GoToHomePageCommand}" HorizontalOptions="Center"/>

            <Label Text="Developed by Rics" HorizontalTextAlignment="Center"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>