<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ContactManager.App">
	<Application.Resources>
        <Color x:Key="White">#FFFFFF</Color>
        <Color x:Key="Red">#FF0000</Color>
        <Color x:Key="Black">#000000</Color>
        <Color x:Key="Green">#3CB716</Color>
        <Color x:Key="Gray">#E6E6E6</Color>
        <Color x:Key="Violet">#4949FB</Color>

        <Style x:Key="StyleButton" TargetType="Button">
            <Setter Property="BackgroundColor" Value="{StaticResource Violet}"/>
            <Setter Property="TextColor" Value="{StaticResource White}"/>
        </Style>
    </Application.Resources>
</Application>